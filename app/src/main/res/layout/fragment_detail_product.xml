<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.DetailProductFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12sp"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fragment_detail_product_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_marginStart="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fragment_detail_product_condition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2sp"
                    android:layout_marginBottom="2sp"
                    android:maxLines="1" />

                <TextView
                    android:id="@+id/fragment_detail_product_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2sp"
                    android:layout_marginBottom="2sp"
                    android:maxLines="3"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fragment_detail_product_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16sp"
                    android:layout_marginBottom="16sp"
                    android:maxLines="1"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/fragment_detail_product_accepts_mercadopago"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2sp"
                    android:layout_marginBottom="2sp"
                    android:maxLines="1"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fragment_detail_product_seller_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2sp"
                    android:layout_marginBottom="2sp"
                    android:maxLines="1" />

                <Button
                    android:id="@+id/fragment_detail_product_permalink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16sp"
                    android:layout_marginBottom="16sp"
                    android:backgroundTint="@color/design_default_color_mercado_libre"
                    android:text="@string/ver_producto_en_mercado_libre">

                </Button>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>